{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "module": "ES2015",
    "target": "es2017",
    "declaration": true,
    "sourceMap": true,
    "noEmitOnError": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "types": ["jest", "node"],
    "lib": ["esnext", "dom"]
  },

  "include": ["src/**/*"]
}
